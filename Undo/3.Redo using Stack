 def exp3():
    undo_stack, redo_stack = [], []
    document = ""
    while True:
        print("\n--- Experiment 3: Undo/Redo ---")
        print("1. Make Change")
        print("2. Undo")
        print("3. Redo")
        print("4. Display Document")
        print("5. Exit")
        ch = int(input("Enter choice: "))
        if ch == 1:
            change = input("Enter change: ")
            undo_stack.append(document)
            document += change
            redo_stack.clear()
        elif ch == 2 and undo_stack:
            redo_stack.append(document)
            document = undo_stack.pop()
        elif ch == 3 and redo_stack:
            undo_stack.append(document)
            document = redo_stack.pop()
        elif ch == 4:
            print("Document:", document)
        elif ch == 5:
            break
 if __name__ == "__main__":
    exp3()
